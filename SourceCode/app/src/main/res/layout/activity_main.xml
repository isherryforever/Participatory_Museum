<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="165dp">
        <TextView
            android:id="@+id/btn_position"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/position"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:background="#1F1AE6E6"
            android:textStyle="bold"
            android:text="显示位置"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/btn_flow"
            style="@style/dialogmoreStyle"
            android:layout_margin="15dp"
            android:background="#1F1AE6E6"
            android:drawableTop="@mipmap/people"
            android:text="游客流量"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_quit"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/quit"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:background="#1F1AE6E6"
            android:textStyle="bold"
            android:text="退出登录"/>
    </LinearLayout>
    

</LinearLayout>